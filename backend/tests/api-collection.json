{
    "info": {
        "name": "Appifylab Backend API",
        "description": "Complete API collection for testing the social media backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api"
        },
        {
            "key": "token",
            "value": ""
        },
        {
            "key": "userId",
            "value": ""
        },
        {
            "key": "postId",
            "value": ""
        },
        {
            "key": "commentId",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token', response.data.token);",
                                    "    pm.collectionVariables.set('userId', response.data.user.id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('token', response.data.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/auth/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "profile"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Posts",
            "item": [
                {
                    "name": "Create Public Post",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('postId', response.data._id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "content",
                                    "value": "This is my first public post!",
                                    "type": "text"
                                },
                                {
                                    "key": "privacy",
                                    "value": "public",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Private Post",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "content",
                                    "value": "This is a private post",
                                    "type": "text"
                                },
                                {
                                    "key": "privacy",
                                    "value": "private",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Posts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Single Post",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "{{postId}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Post",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "content",
                                    "value": "Updated post content",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "{{postId}}"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "{{postId}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Comments",
            "item": [
                {
                    "name": "Create Comment",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
