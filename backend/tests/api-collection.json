                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"Thanks for your comment!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/comments/{{commentId}}/replies",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "comments",
                                "{{commentId}}",
                                "replies"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Comments",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{postId}}/comments",
                            "host": [
                                "{{baseUrl}}"
                            ],
