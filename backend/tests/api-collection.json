                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"Great post!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/posts/{{postId}}/comments",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "{{postId}}",
                                "comments"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Reply",
                    "request": {
                        "method": "POST",
                        "header": [
